{
  "manifest_version": 3,
  "name": "Highlight Popup Extension",
  "version": "1.0",
  "description": "Hiển thị popup khi bôi đen văn bản.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
